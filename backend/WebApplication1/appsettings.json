{
  // 1. הגדרות לוגינג (תקין להעלות ל-Git)
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // 2. AllowedHosts (תקין להעלות ל-Git)
  "AllowedHosts": "*",

  // 3. הגדרות JWT ציבוריות (ה-Key ייטען מהקובץ הסודי או ממשתני סביבה)
  // ✅ אין צורך בפסיק אחרי "AllowedHosts" אם אנו ממשיכים לשדה הבא
  "Jwt": {
    // ה-Key יגיע מהקובץ הסודי או ממשתני הסביבה (App Service / Key Vault)
    // "Key": לא מופיע כאן, אלא נטען מעל
    "Issuer": "PtachiyaAdminApi",
    "Audience": "PtachiyaAngularClient"
  },

  // ⭐️ הוספת בלוק AppSettings עבור BaseUrl ⭐️
  "AppSettings": {
    // כאן את מגדירה את הכתובת הבסיסית של האפליקציה שלך
    "BaseUrl": "https://localhost:7222/"
    
  }
}